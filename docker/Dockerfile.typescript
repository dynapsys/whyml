FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json for TypeScript
COPY docker/package-typescript.json /app/package.json

# Install dependencies
RUN npm install

# Copy TypeScript server
COPY docker/typescript-server.js /app/

# Expose port 3000
EXPOSE 3000

# Start the development server
CMD ["node", "typescript-server.js"]
